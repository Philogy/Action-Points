{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "contract": "readonly",
    "it": "readonly",
    "artifacts": "readonly",
    "describe": "readonly",
    "beforeEach": "readonly",
    "expect": "readonly",
    "web3": "readonly"
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
